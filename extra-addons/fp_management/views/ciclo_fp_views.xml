<odoo>
  <data>
    <record id="view_fp_ciclo_form" model="ir.ui.view">
        <field name="name">fp_management.ciclo.form</field>
        <field name="model">fp_management.ciclo</field>
        <field name="arch" type="xml">
            <form string="Ciclo Formativo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                        <field name="horas_totales"/>
                    </group>
                    <!-- Esto nos permite mostrar los estudiantes debajo en una pestaÃ±a-->
                    <notebook>
                        <page string="Estudiantes">
                            <field name="estudiante_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="edad"/>
                                    <field name="email" optional="hide"/>

                                    <field name="porcentaje_aprobadas" widget="progressbar" string="% Progreso"/>

                                    <field name="permite_fct" widget="boolean_toggle"/>

                                    <field name="nota_media" optional="show"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_fp_ciclo_list" model="ir.ui.view">
        <field name="name">fp_management.ciclo.list</field>
        <field name="model">fp_management.ciclo</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="descripcion"/>
                <field name="horas_totales"/>
            </list>
        </field>
    </record>
  </data>
</odoo>
