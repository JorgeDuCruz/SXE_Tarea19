<odoo>
    <data>

        <record id="view_fp_estudiante_form" model="ir.ui.view">
            <field name="name">fp_gestion.estudiante.form</field>
            <field name="model">fp_gestion.estudiante</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Nombre Completo"/>
                            <h1>
                                <field name="name" placeholder="Ej: Juan Pérez"/>
                            </h1>
                        </div>

                        <group>
                            <group string="Datos Académicos">
                                <field name="ciclo_id" options="{'no_create': True}"/>
                                <field name="horas_ciclo"/>
                                <field name="porcentaje_aprobadas" widget="percentpie" string="Progreso Actual"/>
                                <field name="horas_aprobadas"/>
                                <field name="nota_media" readonly="porcentaje_aprobadas &lt; 100" placeholder="Se desbloquea al completar el ciclo"/>
                            </group>

                            <group string="Datos del Alumno">
                                <field name="fecha_nacimiento"/>
                                <field name="edad"/>
                                <field name="email" widget="email"/>
                                <field name="via_acceso" widget="radio"/>
                            </group>

                            <group string="FCT (Prácticas)">
                                <field name="permite_fct" widget="boolean_toggle" readonly="1"/>
                                <field name="empresa_fct" invisible="not permite_fct" required="permite_fct"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_fp_estudiante_list" model="ir.ui.view">
            <field name="name">fp_gestion.estudiante.list</field>
            <field name="model">fp_gestion.estudiante</field>
            <field name="arch" type="xml">
                <list decoration-success="porcentaje_aprobadas == 100" decoration-warning="porcentaje_aprobadas &gt;= 50 and porcentaje_aprobadas &lt; 100">
                    <field name="name"/>
                    <field name="ciclo_id"/>
                    <field name="email" optional="hide"/>
                    <field name="nota_media" optional="show" widget="float" decoration-bf="1" decoration-muted="nota_media == 0" decoration-danger="nota_media &gt; 0 and nota_media &lt; 5" decoration-warning="nota_media &gt;= 5 and nota_media &lt; 7" decoration-info="nota_media &gt;= 7 and nota_media &lt; 9" decoration-success="nota_media &gt;= 9"/>
                    <field name="porcentaje_aprobadas" widget="percentpie" string="Progreso"/>
                    <field name="permite_fct" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <record id="view_fp_estudiante_kanban" model="ir.ui.view">
            <field name="name">fp_gestion.estudiante.kanban</field>
            <field name="model">fp_gestion.estudiante</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="ciclo_id"/>
                    <field name="email"/>
                    <field name="nota_media"/>
                    <field name="permite_fct"/>
                    <field name="porcentaje_aprobadas"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top mb-2">
                                        <div class="o_kanban_record_top_left">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="text-muted">
                                        <span class="fa fa-graduation-cap me-1"/>
                                        <field name="ciclo_id"/>
                                    </div>
                                    <div class="text-muted d-block mt-1">
                                        <i class="fa fa-envelope-o me-1"/>
                                        <field name="email" widget="email"/>
                                    </div>
                                    <div class="mt-3 mb-2 d-flex align-items-center">
                                        <field name="porcentaje_aprobadas" widget="percentpie"/>
                                        <span class="ms-2 text-muted small">completado</span>
                                    </div>
                                    <div class="o_kanban_record_bottom mt-2">
                                        <div class="oe_kanban_bottom_left">
                                            <span t-if="record.porcentaje_aprobadas.raw_value == 100" class="badge text-bg-success">TITULABLE</span>
                                            <span t-elif="record.permite_fct.raw_value" class="badge text-bg-warning">FCT</span>
                                            <span t-else="" class="badge text-bg-light">EN CURSO</span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <t t-if="record.nota_media.raw_value > 0">
                                                <span t-if="record.nota_media.raw_value &lt; 5" class="badge rounded-pill text-bg-danger">
                                                    <field name="nota_media"/>
                                                </span>
                                                <span t-elif="record.nota_media.raw_value &lt; 7" class="badge rounded-pill text-bg-warning">
                                                    <field name="nota_media"/>
                                                </span>
                                                <span t-elif="record.nota_media.raw_value &lt; 9" class="badge rounded-pill text-bg-info">
                                                    <field name="nota_media"/>
                                                </span>
                                                <span t-else="" class="badge rounded-pill text-bg-success">
                                                    <field name="nota_media"/>
                                                </span>
                                            </t>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>
